---
import SocialList from "@/components/SocialList.astro";
import PostPreview from "@/components/blog/PostPreview.astro";
import { getAllPosts, sortMDByDate } from "@/data/post";
import PageLayout from "@/layouts/Base.astro";

const MAX_POSTS = 10;
const allPosts = await getAllPosts();
const allPostsByDate = sortMDByDate(allPosts).slice(0, MAX_POSTS);
---

<PageLayout meta={{ title: "Home" }}>
	<section>
		<h1 class="title mb-6">Hello there!</h1>
		<p class="mb-4">
			Welcome to my blog, a place where Iâ€™ll probably yap about things I do and find interesting.
			Expect mostly software development, but also some maker projects and a lot of random
			half-finished ideas. I promise to mix in a few entertaining stories about my coding mishaps
			and the occasional attempt at inventing something that may or may not work.
		</p>
		<p>
			Hop on to <a class="cactus-link" href="http://www.zharamustek.com/about/">about</a> for more info
			about me or use any of these links:
			<br />
			<br />
			<br />
			<SocialList />
		</p>
	</section>
	<section aria-label="Blog post list" class="mt-16">
		<h2 class="title mb-4 text-xl">Posts</h2>
		<ul class="space-y-4">
			{
				allPostsByDate.map((p) => (
					<li class="grid gap-2 sm:grid-cols-[auto_1fr] sm:[&_q]:col-start-2">
						<PostPreview post={p} />
					</li>
				))
			}
		</ul>
	</section>
</PageLayout>
